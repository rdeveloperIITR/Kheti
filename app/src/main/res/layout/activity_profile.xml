<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rdeveloper.paviliong6.kheti.ProfileActivity"
    android:background="#dfdddd">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/profile_name"
        android:background="@drawable/border"
        android:hint="Name "
        android:textColor="#dc1111"
        android:textStyle="bold"
        android:paddingLeft="8dp"
        android:maxLines="40"
        android:autoText="true"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/profile_pin"
        android:maxLines="10"
        android:paddingLeft="8dp"
        android:textColor="#dc1111"
        android:textStyle="bold"
        android:hint="Pin Code"
        android:background="@drawable/border"
        android:autoText="true"
        android:layout_below="@+id/profile_name"
        android:layout_alignRight="@+id/profile_name"
        android:layout_alignEnd="@+id/profile_name"
        android:layout_alignLeft="@+id/profile_name"
        android:layout_alignStart="@+id/profile_name"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:id="@+id/profile_imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#59cfd1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_image"
        android:layout_marginTop="15dp"
        android:src="@drawable/image_upload"
        android:layout_below="@+id/profile_pin"
        android:layout_centerHorizontal="true"
        android:onClick="onProfileUpload" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:src="@drawable/save"
        android:onClick="onSave"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rdeveloper.paviliong6.kheti.PostActivity"
    android:background="#d4d3d3">

    <requestFocus
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <requestFocus
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="63dp" />

    <requestFocus
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="127dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/post_edittext1"
        android:layout_marginTop="30dp"
        android:hint="Query Title"
        android:background="@drawable/border"
        android:padding="5dp"
        android:maxLength="40"
        android:textColor="#dc1111"
        android:layout_below="@+id/post_upload"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/post_edittext2"
        android:background="@drawable/border"
        android:hint="Query"
        android:gravity="top"
        android:padding="10dp"
        android:maxLength="200"
        android:textColor="#dc1111"
        android:layout_below="@+id/post_edittext1"
        android:layout_alignLeft="@+id/post_edittext1"
        android:layout_alignStart="@+id/post_edittext1"
        android:layout_marginTop="30dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/post_upload"
        android:src="@drawable/post_button"
        android:onClick="onSave"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_below="@+id/post_edittext2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/image_upload"
        android:layout_marginTop="10dp"
        android:onClick="onUpload" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/answer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onAnswer" />

</RelativeLayout>
